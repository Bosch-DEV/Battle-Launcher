<Page x:Class="Bosch_Launcher.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bosch_Launcher.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock Text="Download Path:"
                       FontWeight="Bold"
                       FontSize="26" />
            <TextBlock x:Name="Path"
                       Height="30"
                       Margin="0,10,0,0" />
            <Button Content="Select Download Path"
                    Width="150"
                    Height="30"
                    Background="Transparent"
                    BorderBrush="Blue"
                    BorderThickness="3"
                    HorizontalAlignment="Left"
                    Click="SelectPathButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius"
                                Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Page>
